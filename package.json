{
  "name": "camp-express",
  "version": "0.1.0",
  "description": "Web application for dynamic camp information editing",
  "main": "index.js",
  "scripts": {
    "commit": "git add . && git-cz",
    "release": "standard-version",
    "start": "node index.js",
    "build-client": "cd client && yarn build && cd ..",
    "install-client": "yarn && cd client && yarn && cd ..",
    "test": "nyc --reporter lcovonly mocha --exit && cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf coverage"
  },
  "dependencies": {
    "express": "^4.16.2",
    "mongodb": "^3.0.0-rc0"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "mocha": "^4.0.1",
    "nyc": "^11.4.1",
    "standard-version": "^4.2.0",
    "supertest": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
